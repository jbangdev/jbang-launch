<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>dev.jbang.launch</groupId>
  <artifactId>jbang-launch</artifactId>
  <version>1.0.0-SNAPSHOT</version>
 
  <name>jbang-launch</name>
  <description>JBang Launch in Java</description>
  <url>https://github.com/jbangdev/jbang-launch</url>
  <inceptionYear>2025</inceptionYear>
  
  <properties>
    <app.main.class>dev.jbang.launch.JBangLaunch</app.main.class>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>17</java.version>
    <jdk.version>17.0.16+8</jdk.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <maven.compiler.release>${java.version}</maven.compiler.release>
  </properties>

  <licenses>
      <license>
          <name>MIT</name>
          <url>https://spdx.org/licenses/MIT.html</url>
          <distribution>repo</distribution>
      </license>
  </licenses>

  <developers>
      <developer>
          <id>maxandersen</id>
          <name>Max Rydahl Andersen</name>
      </developer>
  </developers>

  <scm>
    <connection>scm:git:https://github.com/jbangdev/jbang-launch.git</connection>
    <developerConnection>scm:git:https://github.com/jbangdev/jbang-launch.git</developerConnection>
    <url>https://github.com/jbangdev/jbang-launch.git</url>
    <tag>HEAD</tag>
  </scm>

  <dependencies>
    <dependency>
      <groupId>com.formdev</groupId>
      <artifactId>flatlaf</artifactId>
      <version>3.6.1</version>
    </dependency>
    
    <!-- Test dependencies -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.10.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>3.25.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>  
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.14.0</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.5.3</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <!-- enabled to make jlink happy and have dependencies included in the jar -->
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>${app.main.class}</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>jdks</id>
      <build>
        <defaultGoal>jdks:setup-disco</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.jreleaser</groupId>
            <artifactId>jdks-maven-plugin</artifactId>
            <version>1.19.0</version>
            <configuration>
              <pkgs>
                <pkg>
                  <name>17LinuxIntel</name>
                  <platform>linux-x86_64</platform>
                  <version>${jdk.version}</version>
                  <archiveType>tar.gz</archiveType>
                  <distribution>temurin</distribution>
                </pkg>
                <pkg>
                  <name>17LinuxArm</name>
                  <platform>linux-aarch64</platform>
                  <version>${jdk.version}</version>
                  <archiveType>tar.gz</archiveType>
                  <distribution>temurin</distribution>
                </pkg>
                <pkg>
                  <name>17OsxIntel</name>
                  <platform>osx-x86_64</platform>
                  <version>${jdk.version}</version>
                  <archiveType>tar.gz</archiveType>
                  <distribution>temurin</distribution>
                </pkg>
                <pkg>
                  <name>17OsxArm</name>
                  <platform>osx-aarch64</platform>
                  <version>${jdk.version}</version>
                  <archiveType>tar.gz</archiveType>
                  <distribution>temurin</distribution>
                </pkg>
                <pkg>
                  <name>17WindowsIntel</name>
                  <platform>windows-x86_64</platform>
                  <version>${jdk.version}</version>
                  <distribution>temurin</distribution>
                </pkg>
              </pkgs>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
